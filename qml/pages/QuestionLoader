import QtQuick 2.0
import Sailfish.Silica 1.0
import QtQuick.XmlListModel 2.0

Item {
    id: item

    property string answer:""
    property string question:""

    XmlListModel {
        id: xml

        query: "/DB/R"
        XmlRole {name: "question"; query: "Q/string()"}
        XmlRole {name: "answer"; query: "A/string()"}
          }


    function load()
    {
        xml.source = "xml/xmldb" + Math.floor(116*Math.random()) + ".xml"
        var index = Math.floor(50*Math.random());
        answer = get(index).answer;
        question = get(index).question;

        }
    }
